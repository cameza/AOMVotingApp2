<%= simple_form_for(@nominee) do |f| %>

  <div class="field">
    <br><%= f.input :nominator_mail, label: 'My email is:', placeholder: 'Your email is for validation purpose only'%><br>
  </div>
  <div class="field">
    <%= f.input :name, label: 'I would like to nominate:', placeholder: 'Jane Doe'%><br>
  </div>
  <div class="field">
    <%= f.input :mail, as: :email, label: 'Her/His email is:', placeholder: 'janedoe@mail.com' %><br>
  </div>
  <div class="field">
    <%= f.input :cv, as: :ckeditor, label: 'Paste nominee\'s CV here:', placeholder: 'Copy the CV text and paste it here.', :input_html => { :ckeditor => { :toolbar => 'mini'} } %><br>
  </div>
  <div class="field">
  <%= f.input :statement, as: :ckeditor, label: 'Paste nominee\'s supporting statement here:', placeholder: 'Type here the statement of purpose for your nomination ', :input_html => { :ckeditor => { :toolbar => 'mini'} } %><br><br>
  </div>
  <div class="myButton">
    <%= f.submit "Submit Nomination", :class => 'btn btn-primary btn-fill'%>
  </div>
<% end %>
