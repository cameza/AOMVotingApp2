<h2 id="title">Candidate Selection</h2><br>
<div class="container-fluid" id="box">
  <div class="table-responsive">
    <table class="table table-hover" id="nomineeTable">
      <thead>
        <tr>
          <th>#</th>
          <th>Approved</th>
          <th>Nominee Name</th>
          <th>CV</th>
          <th>Statement</th>
        </tr>
      </thead>
      <% @count = 0 %>
      <% @nominees.each do |nominee| %>
      <tr>
      <% @count = @count + 1 %>
      <% @index = @count - 1 %>
      <%= form_for(nominee, id: 'checkbox_form', remote: true, :html => {:multipart => true, :class => 'form-inline'}) do |f| %>
        <td><%= @count %></td>
        <td><%= f.check_box :committee_check, as: :boolean, boolean_style: :inline, :checked => false, label: false, :class => "taskCheckbox", :onChange => "javascript: if($('.taskCheckbox')[#{@index}].checked){if(sure()){$(this.form).submit();}else{$('.taskCheckbox')[#{@index}].checked = false;}};" %>
        <td><%= nominee.name %></td>
        <td><%= nominee.statement %></td>
        <td><%= nominee.cv %></td>
      <% end %>
      </tr>
      <script type="text/javascript">
        var sure = function() {
          var reply = confirm("Are you sure you want to approve this nominee?");
          if (reply) {return true;}
        };
      </script>
      <% end %>
    </table>
  </div>
</div>


