
<h2 id="title">Listing nominees</h2>

<div class="tab-content">
    <div class="container-fluid" id="about">
              <table class"table table-striped table-bordered table-condensed">
                <thead>
                  <tr>
                    <th colspan="1">Mail</th>
                    <th colspan="1">Name</th>
                    <th colspan="1">Cv</th>
                    <th colspan="1">Statement</th>
                    <th colspan="1">Committee check</th>
                  </tr>
                </thead>
                <tbody>
                  <% @nominees.each do |nominee| %>
                    <%= simple_form_for(nominee, :html => {:multipart => true, :class => '.form-inline'}) do |f| %>
                      <tr>
                        <td><%= nominee.mail %></td>
                        <td><%= nominee.name %></td>
                        <td><%= nominee.cv %></td>
                        <td><%= nominee.statement %></td>
                        <td><%= nominee.committee_check %></td>
                        <td><%= link_to 'Show', nominee %></td>
                        <td><%= link_to 'Edit', edit_nominee_path(nominee) %></td>
                        <td><%= link_to 'Destroy', nominee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                      </tr>
                    <% end %>
                  <% end %>
                </tbody>
              </table>
              <br>
              <%= link_to 'New Nominee', new_nominee_path %>
    </div>
</div>

